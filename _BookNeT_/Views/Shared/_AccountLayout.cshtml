<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS -->
    <link href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="@Url.Content("~/css/Account/Account.css")" rel="stylesheet" />
</head>
<body>
    <!-- Main Content -->
    <div class="container-fluid">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="@Url.Content("~/Content/jquery/dist/jquery.min.js")"></script>
    <script src="@Url.Content("~/Content/bootstrap/dist/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/Content/js/site.js")"></script>
    @RenderSection("Scripts", required: false)
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
