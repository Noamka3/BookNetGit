@{
    ViewBag.Title = ViewBag.Title ?? "My Application";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- טוען את האייקונים של Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- הטעינה של קובצי ה-CSS של Bootstrap -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/ToolsProfile/Tools.css" />
    <!-- הקובץ שלך -->

</head>

<body>
    <!-- Sidebar בצד ימין -->
    <div class="sidebar">
        <ul class="nav nav-pills flex-column mt-3">
            <li class="nav-item mb-2">
                <a class="nav-link" href="@Url.Action("Details", "Profile")">
                    <i class="bi bi-person-circle"></i> User details
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link" href="@Url.Action("PurchasedBooks", "Profile")">
                    <i class="bi bi-book"></i> Books I Bought
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link" href="@Url.Action("BorrowingBooks", "Profile")">
                    <i class="bi bi-book-half"></i> Books I Borrowed
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link" href="@Url.Action("BooksLiked", "Profile")">
                    <i class="bi bi-heart-fill"></i> Books I Like
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link" href="@Url.Action("Support", "Profile")">
                    <i class="bi bi-gear"></i> Support
                </a>
            </li>
        </ul>
    </div>
    <!-- תוכן מרכזי -->
    <div class="main-content">
        @RenderBody()
    </div>

    <!-- טעינת ה-JavaScript של Bootstrap -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>
</body>
</html>
