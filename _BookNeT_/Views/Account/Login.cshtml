@model _BookNeT_.Models.viewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box">
        <h2 class="text-center mb-4">Login</h2>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label for="Email" class="form-label">@Html.LabelFor(m => m.Email)</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label">@Html.LabelFor(m => m.Password)</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="d-flex justify-content-between">
            <div class="form-check mb-3">
                <label class="form-check-label">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                    @Html.LabelFor(m => m.RememberMe)
                </label>
                @Html.ValidationMessageFor(m => m.RememberMe, "", new { @class = "text-danger" })
            </div>
            <div class="float-end">
                <p class="text-center mt-2">
                    @Html.ActionLink("Forgot Password?", "VerifyEmail", "Account", null, new { @class = "text-decoration-none" })
                </p>
            </div>
        </div>

            <input type="submit" value="Login" class="btn btn-primary w-100 p-2" />

            <!-- Registration Link -->
            <p class="text-center mt-2">
                Don't have an account? @Html.ActionLink("Register", "Register", "Account", null, new { @class = "text-decoration-none" })
            </p>

            <div class="text-center">
                <a href="javascript:
                   if (window.history.length>
                    1) {
                    window.history.back();
                    } else {
                    window.location.href = '/Home/Index';
                    }"
                    class="text-decoration-none mt-3">
                    back
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
